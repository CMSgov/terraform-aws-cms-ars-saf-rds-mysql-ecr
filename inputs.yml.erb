<% if ENV['RDS_CREDS'] %>
<% require 'json' %>
user: <%= JSON.parse(ENV['RDS_CREDS'])['username'] %>
password: <%= JSON.parse(ENV['RDS_CREDS'])['password'] %>
host: <%= JSON.parse(ENV['RDS_CREDS'])['host'] %>
<% else %>
user: <%= ENV['USERNAME'] %>
password: <%= ENV['PASSWORD'] %>
host: <%= ENV['HOSTNAME'] %>
<% end %>

# Description: Port MySQL DB Server (e.g., 3306)
port: <%= Integer(ENV['PORT']) %>

# Description: Approved version expected to be installed (e.g., ['5.7.31'])
approved_mysql_version: <%= ENV['MYSQL_VERSION'] %>

# Description: List of MySQL database users (e.g., ['rdsadmin','testuser1','user2'])
mysql_users: <%= ENV['MYSQL_USERS'] %>

# Description: Set to true if the MySQL server has a slave configured
is_mysql_server_slave_configured: <%= ENV['WORKER_CONFIGURED'] %>

# Description: List of MySQL administrative users (e.g., ['rdsadmin','testadmin1','admin2'])
mysql_administrative_users: <%= ENV['ADMIN_USERS'] %>

# Description: List of MySQL users allows to modify or create data structures (e.g., ['rdsadmin'])'
mysql_users_allowed_modify_or_create: <%= ENV['READ_WRITE_USERS'] %>